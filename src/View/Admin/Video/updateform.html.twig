{% extends 'Admin/layout.html.twig' %}

{% block title %} Modifier une vidéo {% endblock %}

{% block content %}
    <div class="row">
        <div class="form-event col-4 offset-4">
            <h2>Complète ce formulaire pour modifier une vidéo sur ta home page</h2>
            <form action="/admin/processEventUpdate" method="POST" >

                <form action="/adminevent/processEventCreation"
                      method="POST" >
                    <div class="form-group">
                        <label for="title">Titre de la vidéo Youtube</label>
                        <input type="text"
                               class="form-control"
                               name="title"
                               value="{{video.title}}"
                        >
                    </div>
                    <div class="form-group">
                        <label for="url">Lien d'intégration</label>
                        <input type="text"
                               class="form-control"
                               name="url"
                               value="{{video.url}}"
                        >
                    </div>

                    <button type="submit" class="btn-submit btn">Enregistrer la vidéo</button>

                    <div class="btn-back-event">
                        <a class="btn" href="/adminevent/listevents">Retourner aux vidéos</a>
                    </div>
                </form>

        </div>
    </div>

{% endblock %}