{% extends 'Admin/layout.html.twig' %}

{% block title %} Modifier une news {% endblock %}

{% block content %}
    <div class="row">
        <div class="form-event col-4 offset-4">
            <h2>Modifier une actu</h2>
            <form action="/news/processNewsUpdate" method="POST" >
                <div class="form-group">
                    <label for="title">Titre de la news</label>
                    <input type="text"
                           class="form-control"
                           name="title"
                           value="{{ news.title }}" >
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text"
                           class="form-control"
                           name="description"
                           value="{{ news.description }}" >
                </div>
                <div class="form-group">
                    <label for="imageUpload">Modifie l'image de l'album</label>
                    <input type="file" name="image" multiple="multiple" />
                    <input type="hidden" name="MAX_FILE_SIZE" value="100000">
                </div>
                <input type="hidden" name="image_path" value="{{ news.img_path }}">
                <input type="hidden" name="event-id" value="{{ news.id }}">
                <button type="submit" class="btn btn-submit">Enregistrer les informations</button>
            </form>
        </div>
    </div>

{% endblock %}
