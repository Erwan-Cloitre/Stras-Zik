{% extends 'Admin/layout.html.twig' %}

{% block title %} Ajouter une news {% endblock %}

{% block content %}
    <div class="row">
        <div class="form-event col-4 offset-4">
            <h2>Compl√®te ce formulaire pour ajouter une news</h2>
            <form action="/news/processNewsCreation"
                  method="POST"
                  enctype='multipart/form-data'>

                <div class="form-group">
                    <label for="title">Titre de la news</label>
                    <input type="text"
                           class="form-control"
                           name="title" required>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text"
                           class="form-control"
                           name="description" required>
                </div>

                <div class="form-group">
                    <label for="imageUpload">Ajoutez l'image de la news</label>
                    <input type="file" name="image" multiple="multiple" />
                    <input type="hidden" name="MAX_FILE_SIZE" value="500000">
                </div>

                <button type="submit" class="btn-submit btn">Enregistrer la nouvelle news</button>
            </form>
        </div>
    </div>

{% endblock %}