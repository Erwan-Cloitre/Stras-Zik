{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">

        <div class="form-event col-4 offset-4">

            <h2> Modifie tes coordonnées : </h2>

            <form method="post" action="/user/processedit">
                <div class="form-group">
                    <label for="">Nom : </label>
                    <input type="text"
                           class="form-control"
                           name="lastname"
                           id="lastname"
                           value ="{{ user.firstname }}"
                           required/>
                </div>

                <div class="form-group">
                    <label for="">Prénom : </label>
                    <input type="text"
                           class="form-control"
                           name="firstname"
                           id="firstname"
                           value ="{{ user.lastname }}"
                           required/>

                </div>

                <div class="form-group">
                    <label for="">Identifiant : </label>
                    <input type="text"
                           class="form-control"
                           name="login"
                           id="login"
                           value ="{{ user.username }}"
                           required/>
                </div>

                <div class="form-group">
                    <label for="">Mot de passe : </label>
                    <input type="password"
                           class="form-control"
                           name="password"
                           id="password"
                           value ="{{ user.password }}"
                           required/>
                </div>

                <div class="form-group">
                    <label for="">E-mail : </label>
                    <input type="email"
                           class="form-control"
                           name="email"
                           id="email"
                           value ="{{ user.email }}"
                           required/>
                </div>

                <div class="form-group">
                    <label for="">Numéro de téléphone : </label>
                    <input type="number"
                           class="form-control"
                           name="number"
                           id="number"
                           value ="{{ user.number }}"
                           required/>
                </div>

                <div class="form-group">
                    <label for="">Nom de la Rue : </label>
                    <input type="text"
                           class="form-control"
                           name="address"
                           id="address"
                           value ="{{ user.adress }}"
                           required/>
                </div>

                <div class="form-group">
                    <label for="">Code postal : </label>
                    <input type="text"
                           class="form-control"
                           name="postal"
                           id="postal"
                           value ="{{ user.postal }}"
                           required/>
                </div>

                <div class="form-group">
                    <label for="">Ville : </label>
                    <input type="text"
                           class="form-control"
                           name="town"
                           id="town"
                           value ="{{ user.city }}"
                           required/>
                </div>
                <input type="hidden" name="user-id" value="{{ user.id }}">

                <input type="submit" class="btn-submit btn" value="Modifier mon compte"/>
            </form>
        </div>
    </div>
{% endblock %}